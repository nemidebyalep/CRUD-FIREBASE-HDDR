<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:backgroundTint="@color/purple_200">



    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Personas"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#D51266"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/linerLayoudtEditar"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#EEDC758B"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/inputNombre"
            android:hint="Nombres..."
            android:paddingTop="10dp"
            android:textColor="@color/teal_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/inputDni"
            android:hint="DNI"
            android:paddingTop="10dp"
            android:textColor="@color/teal_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/inputCorreo"
            android:hint="Correo"
            android:paddingTop="10dp"
            android:textColor="@color/teal_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/inputEstado_civil"
            android:hint="Estado Civil"
            android:paddingTop="10dp"
            android:textColor="@color/teal_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/inputTelefono"
            android:hint="Telefono..."
            android:paddingTop="10dp"
            android:inputType="number"
            android:textColor="@color/teal_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <Button
            android:id="@+id/btnCANCELAR"
            android:text="Cancelar"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#E91E63"
            android:textAllCaps="false"
            android:backgroundTint="#91F1E8"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="60dp">

        </Button>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewPersonas"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>